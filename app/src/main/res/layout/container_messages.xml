<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#93A8B8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <TextView
        android:id="@+id/instance_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/messages"
        android:padding="12dp"
        tools:ignore="MissingConstraints"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        />

    <ImageView
        android:id="@+id/good_buttoned"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        android:src="@drawable/ic_action_name2"
        app:layout_constraintEnd_toEndOf="@id/instance_message"
        app:layout_constraintTop_toBottomOf="@id/instance_message"
        />

    <ImageView
        android:id="@+id/good_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:visibility="visible"
        android:src="@drawable/ic_action_name"
        app:layout_constraintEnd_toEndOf="@id/instance_message"
        app:layout_constraintTop_toBottomOf="@id/instance_message"
        />

    <TextView
        android:id="@+id/message_namer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textSize="14dp"

        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@id/instance_message"
        app:layout_constraintTop_toBottomOf="@id/instance_message"
        >
    </TextView>

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textSize="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@id/instance_message"
        app:layout_constraintTop_toBottomOf="@id/message_namer"
        >
    </TextView>

    <TextView
        android:id="@+id/explannation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="goodの数"
        android:textSize="12dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toStartOf="@id/good_button"
        app:layout_constraintTop_toBottomOf="@id/instance_message"
        >
    </TextView>
    <TextView
        android:id="@+id/counters_good"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toStartOf="@id/good_button"
        app:layout_constraintTop_toBottomOf="@id/explannation"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>